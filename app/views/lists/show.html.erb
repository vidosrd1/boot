<p style="color: green"><%= notice %></p>
<div>
  <%= link_to "Edit this list", edit_list_path(@list) %> |
  <%= link_to "Back to lists", lists_path %>
</div>
<hr />
<h1><%= @list.title %></h1>
<div id="navbar" class="1collapse">
  <ul class="nav navbar-nav">
    <li class="">
      <p style="width:650px; heigh:auto">
      <% if @list.image.attached? %>
        <%= link_to image_tag(@list.image,
        style:"width:640px; heigh:auto"), @list.image %>
      <% end %>
      </p>
    </li>
    <li>
      <p style="width:400px; heigh:auto">
        <%= @list.body %>
      </p>
    </li>
    <li class="">
      <% if @list.files.attached? %>
        <% @list.files.each do |attachment| %>
          <% if attachment.image? %>
            <%= image_tag attachment, width: "200px" %>
          <% elsif attachment.audio? %>
            <audio controls>
              <source src="<%= rails_blob_url(attachment) %>"
                type="<%= attachment.content_type %>" />
            </audio>
          <% elsif attachment.video? %>
            <video controls width="720">
              <source src="<%= rails_blob_url(attachment) %>"
                type="<%= attachment.content_type %>" />
            </video>
          <% else %>
            <%= link_to attachment.filename,
            rails_blob_path(attachment, disposition: "attachment") %>
          <% end %>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
<hr />
<div>
  <%= link_to "Edit this list", edit_list_path(@list) %> |
  <%= link_to "Back to lists", lists_path %>

  <%= button_to "Destroy this list", @alist, method: :delete %>
</div>
<hr />
<br />
